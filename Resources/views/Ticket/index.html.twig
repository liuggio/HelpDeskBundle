<h1>Ticket list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Subject</th>
            <th>Body</th>
            <th>Language</th>
            <th>Createdat</th>
            <th>Updatedat</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('ticket_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.subject }}</td>
            <td>{{ entity.body }}</td>
            <td>{{ entity.language }}</td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('ticket_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ticket_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% if app.session.hasFlash('thankYouMsg') %}
<div class="flash-notice">
{{ app.session.flash('thankYouMsg') }}
<br />
Ticket rated:{{ app.session.flash('ratedTickedId') }}
<br />
Rating Assigned:{{ app.session.flash('rating') }}
</div>
{% endif %}

<ul>
    <li>
        <a href="{{ path('ticket_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
